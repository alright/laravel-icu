{
    "name": "alright/laravel-icu",
    "type": "library",
    "license": "MIT",
    "description": "Laravel package for better ICU translation syntax using php-intl extension",
    "keywords": [
        "laravel",
        "translation",
        "validation",
        "intl",
        "icu"
    ],
    "authors": [
        {
            "name": "Evgeny Tronchuk",
            "email": "evgenytronchuk@gmail.com"
        },
        {
            "name": "Tomasz Romik",
            "email": "manetamajster@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Alright\\Laravel\\Translation\\": "src/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/"
        ]
    },
    "require": {
        "php": "^8.0",
        "ext-intl": "*",
        "illuminate/support": "^8|^9",
        "illuminate/translation": "^8|^9",
        "illuminate/validation": "^8|^9"
    },
    "require-dev": {
        "orchestra/testbench": "6.2.0",
        "phpunit/phpunit": "^9.0",
        "friendsofphp/php-cs-fixer": "^2.16"
    },
    "scripts": {
        "lint-fix": "php vendor/bin/php-cs-fixer fix --config=.php_cs",
        "lint": "php vendor/bin/php-cs-fixer fix --config=.php_cs --dry-run"
    }
}
